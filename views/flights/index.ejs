<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=!, initial-scale=1.0">
  <title>Document</title>
</head>
<body>
  
  
<h1>Flights List</h1>
  <table>
    <thead>
      <tr>
        <th>Airline</th>
        <th>Airport</th>
        <th>Flight Number</th>
        <th>Departs</th>
      </tr>
    </thead>
    <tbody>
      <% flights.forEach(function(m) { %>
        <tr>
          <td><%= m.airline %></td>
          <td><%= m.airport %></td>
          <td><%= m.flightNo %></td>
          <td><%= m.departs %></td>
          <td><a href="/flights/<%= m._id %>">DETAILS</a></td>
        </tr>
        <% }); %>
    </tbody>
  </table>
  <a href="/flights/new">Add Flight</a>
  
</body>
</html>